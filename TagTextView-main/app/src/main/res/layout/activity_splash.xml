<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.SplashActivity"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1、自定义组件"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <com.like.tag.views.TingTextViewClearUpdate
            android:id="@+id/image_tv1_2"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这行不要删"
            android:textSize="22sp"
            android:textColor="#FF00FF"
            android:lineSpacingExtra="1dp"
            android:background="#EBEBEB"
            tools:ignore="MissingConstraints" />
<!--        android:maxLines="15"-->
<!--        android:ellipsize="end"-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2、其他相关示例"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <com.like.tag.views.ImageTextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="20dp"
            android:background="#EBEBEB"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3、其他Demo，通过添加标签方式实现，可图文混排，无法处理TextView自带边距问题"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/btn1"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去看看"/>


    </LinearLayout>



</ScrollView>